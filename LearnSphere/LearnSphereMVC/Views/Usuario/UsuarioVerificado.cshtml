@model bool
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Usuario Verificado</title>
    <link href="~/mdb-ui-kit/css/mdb.min.css" rel="stylesheet" />
    <link href="~/css/inicioSesion.css" rel="stylesheet" />

    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>

<body>
    @Html.Partial("_Navbar")

    <section class="vh-100" style="background-color: #7C4BC0;">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-12 col-xl-11">
                    <div class="card text-black" style="border-radius: 25px;">
                        <div class="card-body p-md-5">
                            <div class="row justify-content-center">
                                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1 d-flex flex-column justify-content-center">
                                    @if (Model == true)
                                    {
                                        <h5>Usuario Verificado Correctamente</h5>
                                    }
                                    else
                                    {
                                        <h5>Usuario No Verificado Correctamente</h5>
                                    }
                                    <a href="@Url.Action("InicioSesion", "Usuario")" class="btn btn-primary btn-lg">Inicio Sesion</a>

                                </div>
                                <div class="col-md-10 col-lg-6 col-xl-7 order-1 order-lg-2 d-flex align-items-center">
                                    <img src="~/assets/images/logoregistro.png" class="img-fluid" alt="Sample image" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="~/mdb-ui-kit/js/mdb.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</body>

</html>

