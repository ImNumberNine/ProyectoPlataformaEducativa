@model LearnSphereMVC.Models.InputModels.UsuarioRegistroModel
@{
    ViewData["Title"] = "NuevoUsuario";
    Layout = "~/Views/Shared/_NavbarAdmin.cshtml";


}

@using (Html.BeginForm("NuevoUsuario", "Admin", FormMethod.Post, new { id = "registroForm", enctype = "multipart/form-data" }))
{
    <div style="margin:30px">
        <h1>Nuevo Usuario</h1>
        @if (ViewBag.ErrorMessage != null)
        {
            <span style="color:mediumpurple">@ViewBag.ErrorMessage</span>
        }
        <div class="form-group">
            <label for="nombre" class="control-label">Nombre</label>
            @Html.TextBoxFor(m=>m.Nombre,new{@class="form-control txtbox",@id="nombre"})
            <span asp-validation-for="Nombre" style="color:mediumpurple"></span>
        </div>
        <div class="form-group">
            <label for="apellidos" class="control-label">Apellidos</label>
            @Html.TextBoxFor(m=>m.Apellidos,new{@class="form-control txtbox",@id="apellidos"})
            <span asp-validation-for="Apellidos" style="color:mediumpurple"></span>
        </div>
        <div class="form-group">
            <label for="correo" class="control-label">Correo</label>
            @Html.TextBoxFor(m=>m.Correo,new{@class="form-control txtbox",@id="correo"})
            <span asp-validation-for="Correo" style="color:mediumpurple"></span>
        </div>
        <div class="form-group">
            <label for="contrasena" class="control-label">Confirmar Contrasena</label>
            @Html.PasswordFor(m=>m.Contrasena,new{@class="form-control txtbox",@id="contrasena"})
            <span asp-validation-for="Contrasena" style="color:mediumpurple"></span>
        </div>
        <div class="form-group">
            <label for="confirmarContrasena" class="control-label">Confirmar Contrasena</label>
            @Html.PasswordFor(m=>m.ConfirmarContrasena,new{@class="form-control txtbox",@id="confirmarContrasena"})
            <span asp-validation-for="ConfirmarContrasena" style="color:mediumpurple"></span>
        </div>
        <div class="form-group">
            <label for="Rol" class="control-label">Rol</label>
            @Html.DropDownListFor(m => m.Rol, new List<SelectListItem>
        {
        new SelectListItem{ Text="Profesor", Value = "Profesor" },
        new SelectListItem{ Text="Admin", Value = "Admin" },
        new SelectListItem{ Text="Estudiante", Value = "Estudiante" }
        }, "Seleccione una opción", new { @class = "form-select", id = "rol" })
            <span asp-validation-for="Rol" style="color:mediumpurple"></span>
        </div>
        <div class="form-group">
            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary">Crear</button>
        </div>
    </div>
}

