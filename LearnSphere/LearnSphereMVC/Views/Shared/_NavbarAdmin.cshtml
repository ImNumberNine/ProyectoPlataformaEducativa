            <hr class="sidebar-divider my-0">

            <!-- Nav Item - Dashboard -->
            @if (userRol == "Admin")
            {
                <li class="nav-item active">
                    <a class="nav-link" href="@Url.Action("IndexAdmin", "Admin")">
